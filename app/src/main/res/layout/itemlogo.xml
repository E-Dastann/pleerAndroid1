<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <TextView
        android:id="@+id/text_for_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:text="1"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/music_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="20dp"
        android:text="Watch me!"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/text_for_number"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silento"
        android:textSize="13dp"

        app:layout_constraintStart_toStartOf="@id/music_person"
        app:layout_constraintTop_toBottomOf="@id/music_person" />
    <TextView
        android:id="@+id/time_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5:32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="49dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>